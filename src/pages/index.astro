---
import { v4 as uuid } from "uuid";
import Home from "../components/Home.astro";
import Layout from "../layouts/Layout.astro";
import { LoadWrapper } from "../components/LoadWrapper";
import { extractUuid } from "../lib/extract-uuid";

import "../lib/processUserId.astro";

export const prerender = false;

const cookieUUID = extractUuid(Astro.request);

const userUUID = cookieUUID ?? uuid();

if (!cookieUUID) {
  Astro.response.headers.set(
    "Set-Cookie",
    `uuid=${userUUID}; Path=/; HttpOnly; Secure; SameSite=Strict; Max-Age=31536000`,
  );
}
---

<Layout>
  <LoadWrapper client:load>
    <Home uuid={userUUID} />
  </LoadWrapper>
</Layout>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  @layer base {
    @font-face {
      font-family: "Gotham";
      font-style: normal;
      font-weight: 400;
      font-display: swap;
      src: url(/fonts/GothamMedium.ttf) format("woff2");
    }
  }
</style>

<script>
  import "echarts/i18n/langFR";
</script>
