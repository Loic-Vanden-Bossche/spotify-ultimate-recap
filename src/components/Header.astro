---
import { ImportButton } from "./ImportButton";
import githubLogo from "../assets/github-mark.svg";
import logo from "../assets/logo.svg";
---

<header class="bg-main text-black p-3 h-16 flex justify-between">
  <div class="h-full flex gap-3 items-center">
    <img class="h-full" src={logo.src} alt="Logo" />
    <h1 class="text-2xl font-bold">Spotify Ultimate Recap</h1>
  </div>
  <div class="h-full flex gap-5 justify-end">
    <ImportButton client:load />
    <a
      href="https://github.com/Loic-Vanden-Bossche/spotify-ultimate-recap"
      target="_blank"
      rel="noopener noreferrer"
    >
      <img class="h-full" src={githubLogo.src} alt="Github Logo" />
    </a>
  </div>
</header>
