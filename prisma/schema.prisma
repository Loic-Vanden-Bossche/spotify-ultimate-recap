generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model User {
  id        String           @unique
  username  String
  histories SpotifyHistory[]
  createdAt DateTime         @default(now())
}

model SpotifyHistory {
  id            String         @id() @default(uuid())
  userId        String
  trackCount    Int
  zipFileName   String
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  spotifyTracks SpotifyTrack[]
  spotifyYears  SpotifyYear[]
  createdAt     DateTime       @default(now())
}

model SpotifyYear {
  year          Int
  history       SpotifyHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  historyId     String
  totalDays     Int
  totalMsPlayed BigInt
  spotifyTracks SpotifyTrack[]

  @@id([year, historyId])
}

model SpotifyTrack {
  id                 String         @id() @default(uuid())
  history            SpotifyHistory @relation(fields: [historyId], references: [id], onDelete: Cascade)
  historyId          String
  time               DateTime
  platform           String
  msPlayed           Int
  connCountry        String
  ipAddr             String
  trackName          String?
  artistName         String?
  albumName          String?
  trackUri           String?
  reasonStart        String
  reasonEnd          String
  shuffle            Boolean
  skipped            Boolean
  offline            Boolean
  offlineTimestamp   DateTime?
  incognitoMode      Boolean
  jsonSourceFileName String
  year               Int
  spotifyYear        SpotifyYear    @relation(fields: [year, historyId], references: [year, historyId])
}
